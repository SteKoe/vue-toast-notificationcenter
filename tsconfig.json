{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.vue",
    "**/*.ts"
  ]
}
